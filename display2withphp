SELECT DISTINCT student.sname
FROM student 
JOIN sc ON (student.sno = sc.sno) 
WHERE sc.sno<>'s002' AND sc.cno IN
(SELECT sc.cno FROM sc WHERE sc.sno = 's002')
";
$result = mysql_query($sql);
